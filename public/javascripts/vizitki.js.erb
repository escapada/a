$( "#select-tirazh" ).click(function() {
	$( this ).val('');
});
$( "#select-tirazh" ).focusout(function() {
	if($( this ).val().match(/\D/) || $( this ).val() == ''){
		$( this ).val('Тираж');
	}
	else if($( this ).val()%100){
		if ($( this ).val() < 100) {
			$( this ).val(100);
		}
		else{
			tmpVal = Math.round($( this ).val()/100)*100;
			$( this ).val(tmpVal);
		}	
	}
	else if($( this ).val() == 0){
		$( this ).val(100);
	}
});


$("#calculate").click(function(){
	var varpaper = "paper";
	if (nopaper) {varpaper = "nopaper";}

	printer = $("[name='printmethod']").val();
	//here will be validation and collecting all values
	paper = $("[name='material']").val();
	tirazh = $("#select-tirazh").val();
	color = $("[name='color']").val();
	klishe_blint = $("[name='klishe_blint']").val();
	klishe_folga = $("[name='klishe_folga']").val();
	klishe_kongrev = $("[name='klishe_kongrev']").val();
	vyrubka = $("[name='vyrubka']").val();

	


	dp = new Array();
	dp[0] = $("[name='dp1']").val();
	dp[1] = $("[name='dp2']").val();
	dp[2] = $("[name='dp3']").val();
	dp[3] = $("[name='dp4']").val();
	dp[4] = $("[name='dp5']").val();
	dp[5] = $("[name='dp6']").val();
	dp[6] = $("[name='dp7']").val();
	dp[7] = $("[name='dp8']").val();
	dp[8] = $("[name='dp9']").val();
	
	if(paper == '' || color == '' || tirazh == '' || tirazh == 'Тираж'){
		$("#alert").show(0);
		$("#alert").text('Не хватает параметров!');
	}
	else{
		$("#alert").hide(0);

		$.ajax({
			url: '/index/cards_calculate',
			type: 'POST',
			data: 'printer='+printer+'&'+varpaper+'='+paper+'&color='+encodeURIComponent(color)+'&tirazh='+tirazh+'&dp='+dp+'&klishe_blint='+klishe_blint+'&klishe_folga='+klishe_folga+'&klishe_kongrev='+klishe_kongrev+'&vyrubka='+vyrubka,
			//dataType: "json",
			success: function(tmp){
				$('#result').text(tmp);
			}
		});
	}	
}); //end of calculate click


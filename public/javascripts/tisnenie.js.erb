$(".selectoption_format").click(function(){

	var format = $('> input', this).val();
	var text = $(this).text()

	$("#format-t span").html(text);
	$("#format-t").children("input").val(format);
	
	$("#format-t-options").toggle();
	
	$("#help_invisieble_box").css({"display": "none"});
});


$(".selectoption_material").click(function(){
	var material = $('> input', this).val();
	var text = $(this).text()

	mypaper = false;
	nopaper = false;
	
	if (material=='0') {nopaper=true;}
	
	$("#material-t span").html(text);
	$("#material-t").children("input").val(material);
	
	$("#material-options-wrap").toggle();
	$("#help_invisieble_box").css({"display": "none"});
});

$(".selectoption_material_input").click(function(){
	$(this).val('');
});

$(".selectbtn").click(function() {
	if($(this).prev().val().match(/[^0-9\\.]/) || $(this).prev().val() == ''){
		alert("Неверно указана цена листа бумаги!");
		$("#material-t span").html("Материал");
		$("#material-t").children("input").val('');
		mypaper = false;
	}
	else{
		var text = $(this).prev().val();
		$("#material-t span").html(text);
		$("#material-t").children("input").val(text);

		$("#material-options-wrap").toggle();
		$("#help_invisieble_box").css({"display": "none"});
		mypaper = true;
		nopaper = false;
	}
});

$("#help_invisieble_box").click(function(){
	$(this).css({"display": "none"});
	$(".options-list").css({"display": "none"});
});


$(".radiobtn").click(function(){
	if ($(this).hasClass('selected')) {
		$(this).removeClass('selected');
		$(this).children("input").val(0);
	}
	else{
		$(this).addClass( "selected" );
		$(this).children("input").val(1);
	};
});


$("#calculate").click(function(){
	var varpaper = "paper";
	var notype = false;
	if (mypaper) {varpaper = "mypaper";}
	if (nopaper) {varpaper = "nopaper";}
	//here will be validation and collecting all values
	format = $("[name='format']").val();
	paper = $("[name='material']").val();
	tirazh = $("#select-tirazh-t").val();

	dp = new Array();
	dp[0] = $("[name='dp1']").val();
	dp[1] = $("[name='dp2']").val();
	dp[2] = $("[name='dp3']").val();

	if (dp[0]==0 & dp[1]==0 & dp[2]==0){
		notype = true;
	}
	
	if(paper == '' || format == '' || tirazh == '' || tirazh == 'Тираж' || notype){
		$("#alert").show(0);
		$("#alert").text('Не хватает параметров!');
	}
	else{
		$("#alert").hide(0);

		$.ajax({
			url: '/index/tisnenie_calculate',
			type: 'POST',
			data: varpaper+'='+paper+'&format='+format+'&tirazh='+tirazh+'&dp='+dp,
			//dataType: "json",
			success: function(tmp){
				$('#result').text(tmp);
			}
		});
	}	
}); //end of calculate click

//begin of klishebtn click
